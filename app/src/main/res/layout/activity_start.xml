<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/startContainer"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".StartActivity"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_background" >
    <!-- android:background="@drawable/test_background_main_menu" -->


    <TextView android:id="@+id/startTitle"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:textSize="30dp"

        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="@string/startTitleTextString" />


    <ImageView android:id="@+id/startMainImage"

        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/startTitle"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/nasa_logo"                       />



    <TextView android:id="@+id/startButtonTextView"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:paddingTop="450dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:text="@string/startBtnTextString"
        android:textStyle="bold"
        android:shadowColor="#000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="50"

        />

    <!--
    <Button android:id="@+id/startActivityBtn"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/startMainImage"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"


        android:background="@color/white"
        android:text="@string/startBtnTextString"
                                                                />

    -->



</RelativeLayout>