<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp">

    <TextView android:id="@+id/listViewLayoutTitleXML"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_alignParentStart="true"
        />

    <TextView android:id="@+id/listViewLayoutDateXML"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/listViewLayoutTitleXML"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:padding="5dp"
        android:textAlignment="viewEnd"

        />


    <ImageView android:id="@+id/listViewLayoutImageXML"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/listViewLayoutDateXML"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"


        />




</RelativeLayout>